<Window x:Class="ProyectoDSI115_G5_2021.GestionUsuarios.GestionUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021.GestionUsuarios"
        mc:Ignorable="d"
        Title="Administración de Usuarios - FYSIEX" Height="464" Width="800">
    <Grid>
        <Rectangle Fill="#FFC91029" Height="61" Stroke="Black" VerticalAlignment="Top"/>
        <Label Content="Administración de Usuarios" HorizontalAlignment="Left" Margin="37,10,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Foreground="White"/>
        <Rectangle Margin="320,79,10,10" Stroke="Black"/>
        <Button x:Name="btnBuscar" Content="Buscar" Margin="0,99,23,0" VerticalAlignment="Top"  Background="#FFC91029" FontSize="16" FontFamily="Segoe UI" Foreground="#FFF7F7F7" Height="32" HorizontalAlignment="Right" Width="88"/>
        <TextBox TextWrapping="Wrap" Text="" Margin="330,99,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Width="306" MaxLength="50"/>
        <DataGrid x:Name="dataUsuarios" ItemsSource="{Binding}" AlternatingRowBackground="#FFCC9999" AlternationCount="2" Margin="330,136,23,172" />
        <Rectangle Fill="#FFF1EBEC" HorizontalAlignment="Left" Height="275" Margin="19,79,0,0" Stroke="Black" VerticalAlignment="Top" Width="285" StrokeThickness="0"/>
        <Button x:Name="btnAgregar"  HorizontalAlignment="Left" Margin="81,118,0,0" VerticalAlignment="Top" Width="162" Height="65" Click="BtnAgregar_Click">
            <DockPanel>
                <Image Source="agregar.png" Height="40" Width="54"></Image>
                <TextBlock HorizontalAlignment="Stretch" Height="20">Agregar</TextBlock>
            </DockPanel>
        </Button>
        <Button Name="btnBorrar" Content="Borrar" HorizontalAlignment="Left" Margin="81,196,0,0" VerticalAlignment="Top" Width="162" Height="65"/>
        <Button Name="btnEditar" Content="Editar" HorizontalAlignment="Left" Margin="81,275,0,0" VerticalAlignment="Top" Width="162" Height="65"/>
        <Label Content="Consultar Usuarios" HorizontalAlignment="Left" Margin="330,68,0,0" VerticalAlignment="Top" Background="White"/>
        <Button Name="btnVolver" Content="Volver" HorizontalAlignment="Left" Margin="19,0,0,10" Width="85" Background="#FFC91029" FontSize="16" FontFamily="Segoe UI" Foreground="#FFF7F7F7" Height="30" VerticalAlignment="Bottom"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="330,0,0,141" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="330,0,0,110" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="Correo electrónico" HorizontalAlignment="Left" Margin="330,0,0,79" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="Rol de usuario" HorizontalAlignment="Left" Margin="330,0,0,17" Height="26" VerticalAlignment="Bottom"/>
        <TextBox Name="cuadroUsuario" Margin="470,0,242,141" TextWrapping="Wrap" FontSize="14" IsEnabled="False" MaxLength="7" Height="26" VerticalAlignment="Bottom"/>
        <TextBox Name="cuadroEmail" Margin="470,0,23,79" TextWrapping="Wrap" FontSize="14" IsEnabled="False" MaxLength="50" Height="26" VerticalAlignment="Bottom"/>
        <PasswordBox Name="cuadroContrasena" Margin="470,0,23,110" FontSize="14" IsEnabled="False" MaxLength="50" Height="26" VerticalAlignment="Bottom"/>
        <ComboBox Name="comboRoles" Margin="470,0,146,17" FontSize="14" IsEnabled="False" Height="26" VerticalAlignment="Bottom"/>
        <Button Name="botonGuardar" Content="Guardar" Margin="0,0,23,17" FontSize="16" Background="#FFC91029" Foreground="#FFF7F7F7" IsEnabled="False" Click="BotonGuardar_Click" HorizontalAlignment="Right" Width="88" Height="26" VerticalAlignment="Bottom"/>
        <Label Content="Elige la Opción que deseas realizar" HorizontalAlignment="Left" Margin="19,79,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Segoe UI" Foreground="#FF0E0E0E"/>
        <Label Content="Empleado" HorizontalAlignment="Left" Margin="330,0,0,48" Height="26" VerticalAlignment="Bottom"/>
        <ComboBox Name="comboEmpleado" Margin="470,0,23,48" IsEnabled="False" Height="26" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
