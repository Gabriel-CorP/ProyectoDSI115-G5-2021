<Window x:Class="ProyectoDSI115_G5_2021.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021"
        mc:Ignorable="d"
        Closing="MainWindow_Closing"
        Title="FYSIEX - Bienvenido " Height="450" Width="800" ResizeMode="CanMinimize" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="181*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#FFC91029" Height="61" Stroke="Black" VerticalAlignment="Top" Grid.ColumnSpan="3" StrokeThickness="0"/>
        <Label Content="¡Bienvenido a FYSIEX, tu control de inventario digital!" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Comic Sans MS" FontWeight="Bold" Foreground="White" FontStyle="Italic" Grid.ColumnSpan="3" Height="39"/>
        <Label Content="Menú principal" HorizontalAlignment="Left" Margin="19,66,0,0" VerticalAlignment="Top" FontSize="18" Height="34" Width="129" FontFamily="Comic Sans MS"/>
        <Rectangle Grid.Column="1" Fill="#FFF1EBEC" Height="309" Margin="10,100,10,0" Stroke="Black" VerticalAlignment="Top" StrokeThickness="0"/>
        <Button Name="btnLogout" HorizontalAlignment="Left" Margin="19,350,0,0" VerticalAlignment="Top" Width="150" Height="50" Background="#FFC91029" Click="BtnLogout_Click">
            <DockPanel Height="40" LastChildFill="False" Width="140">
                <Image Source="/Images/cerrar2.png" Height="40" Width="40"/>
                <Label Content="Cerrar sesión" Height="30" VerticalAlignment="Top" FontSize="14" Margin="5,5,0,0" Width="100" Foreground="White" FontFamily="Comic Sans MS"/>
            </DockPanel>
        </Button>
        <Label Content="Administración" Grid.Column="1" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.154" Height="26" Width="89"/>
        <Rectangle Grid.Column="2" Fill="#FFF1EBEC" Height="130" Margin="10,100,10,0" Stroke="Black" VerticalAlignment="Top" StrokeThickness="0"/>
        <Label Content="Consultas y gestiones" Grid.Column="2" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.154" Height="26" Width="124"/>
        <Rectangle Grid.Column="2" Fill="#FFF1EBEC" Height="130" Margin="10,279,10,0" Stroke="Black" VerticalAlignment="Top" StrokeThickness="0"/>
        <Label Content="Solicitudes" Grid.Column="2" HorizontalAlignment="Left" Margin="10,248,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.079,0.154" Height="26" Width="67"/>
        <Button Background="#FFF1EBEC" Name="btnClientes" Grid.Column="1" HorizontalAlignment="Left" Margin="20,110,0,0" VerticalAlignment="Top" Width="140" BorderThickness="0" Click="BtnClientes_Click">
            <StackPanel Height="80" Width="140">
                <Image Source="/Images/cliente.png" Height="40" Width="54" Margin="43,5"/>
                <Label Content="Administrar Clientes" Height="30" VerticalAlignment="Bottom" Width="120"/>
            </StackPanel>
        </Button>
        <Button Background="#FFF1EBEC" Name="btnEmpleados" Grid.Column="1" HorizontalAlignment="Left" Margin="20,210,0,0" VerticalAlignment="Top" Width="140" BorderThickness="0">
            <StackPanel Height="80" Width="140">
                <Image Source="/Images/empleados.png" Height="40" Width="54" Margin="43,5"/>
                <Label Content="Administrar Empleados" Height="30" VerticalAlignment="Bottom" Width="132"/>
            </StackPanel>
        </Button>
        <Button Background="#FFF1EBEC" Name="btnUsuarios" Grid.Column="1" HorizontalAlignment="Left" Margin="20,310,0,0" VerticalAlignment="Top" Width="140" BorderThickness="0" Click="BtnUsuarios_Click">
            <StackPanel Height="80" Width="140">
                <Image Source="/Images/usuario.png" Height="40" Width="54" Margin="43,5"/>
                <Label Content="Administrar Usuarios" Height="30" VerticalAlignment="Bottom" Width="120"/>
            </StackPanel>
        </Button>
        <Image HorizontalAlignment="Left" Height="145" Margin="19,105,0,0" VerticalAlignment="Top" Width="222" Source="Images/fysi.jpg"/>
    </Grid>
</Window>
