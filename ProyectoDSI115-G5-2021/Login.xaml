<Window x:Class="ProyectoDSI115_G5_2021.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021"
        mc:Ignorable="d"
        Title="Login - FYSIEX" Height="450" Width="850" ResizeMode="CanMinimize" MinWidth="850" MinHeight="450">
    <Grid>
        <Rectangle Fill="#FFC91029" HorizontalAlignment="Left" Height="59" Stroke="Black" VerticalAlignment="Top" Width="844" Margin="0,362,0,0"/>
        <Label x:Name="labelEmail" Content="Correo electrónico" Margin="306,282,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="124"/>
        <TextBox x:Name="cuadroEmail" Height="26" Margin="440,282,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" IsTabStop="False" MaxLength="50"/>
        <Label x:Name="labelContrasena" Content="Contraseña" Margin="350,319,0,0" FontSize="14" HorizontalAlignment="Left" Width="80" Height="29" VerticalAlignment="Top"/>
        <PasswordBox x:Name="cuadroContrasena" Margin="440,320,154,0" VerticalAlignment="Top" Height="26" FontSize="14" MaxLength="50"/>
        <Button x:Name="botonInicioSesion" Content="Iniciar Sesión" Margin="714,322,10,0" VerticalAlignment="Top" FontSize="14" Height="26" Background="#FFC91029" Foreground="#FFF7F7F7" Click="BotonInicioSesion_Click"/>
        <Button x:Name="botonOlvide" Content="¿Olvidó su contraseña?" HorizontalAlignment="Left" Margin="440,377,0,0" VerticalAlignment="Top" Width="150" Height="26" FontSize="14" Click="OlvideButton_Click"/>
        <Button x:Name="botonSalir" Content="Salir" HorizontalAlignment="Left" Height="26" Margin="60,377,0,0" VerticalAlignment="Top" Width="56" FontSize="14" RenderTransformOrigin="2.02,0.564" Click="BotonSalir_Click"/>
        <Label x:Name="labelNuevaContrasena" Content="Nueva contraseña" Margin="309,0,0,67" FontSize="14" HorizontalAlignment="Left" Width="121" Height="29" VerticalAlignment="Bottom" Visibility="Hidden"/>
        <PasswordBox x:Name="cuadroNuevaContrasena" HorizontalAlignment="Left" Margin="440,320,0,0" VerticalAlignment="Top" Width="250" Height="26" FontSize="14" IsTabStop="False" MaxLength="50" Visibility="Hidden"/>
        <Button x:Name="botonRestaurarContrasena" Content="Reestablecer" HorizontalAlignment="Left" Margin="714,377,0,0" VerticalAlignment="Top" Width="120" Height="26" FontSize="14" IsTabStop="False" Click="BotonRestaurarContrasena_Click" RenderTransformOrigin="1.066,0.596" Visibility="Hidden"/>
        <Label x:Name="labelRestaurarContrasena" Content="Confirme su contraseña" HorizontalAlignment="Right" Margin="0,0,414,16" VerticalAlignment="Bottom" FontSize="14" Width="156" Foreground="#FFF7F7F7" Visibility="Hidden"/>
        <PasswordBox x:Name="cuadroRestaurarContrasena" HorizontalAlignment="Left" Margin="440,377,0,0" VerticalAlignment="Top" Width="250" Height="26" FontSize="14" MaxLength="50" Visibility="Hidden"/>
        <Label x:Name="labelBienvenido" Content="Para acceder, ingrese sus credenciales." HorizontalAlignment="Left" Margin="3,282,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="botonVolver" Content="Volver" HorizontalAlignment="Left" Height="26" Margin="140,377,0,0" VerticalAlignment="Top" Width="56" FontSize="14" RenderTransformOrigin="2.02,0.564" Click="BotonVolver_Click" Visibility="Hidden"/>
        <Image HorizontalAlignment="Left" Height="143" Margin="306,10,0,0" VerticalAlignment="Top" Width="229" Source="Images/fysi.jpg"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="274,170,0,0" VerticalAlignment="Top" Width="35" Source="Images/cff.jpg"/>
        <Image HorizontalAlignment="Left" Height="42" Margin="440,170,0,0" VerticalAlignment="Top" Width="150" Source="Images/hf.jpg"/>
    </Grid>
</Window>
