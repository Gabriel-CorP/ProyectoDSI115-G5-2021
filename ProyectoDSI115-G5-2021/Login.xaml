<Window x:Class="ProyectoDSI115_G5_2021.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoDSI115_G5_2021"
        mc:Ignorable="d"
        Title="Login - FYSIEX" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Rectangle Fill="#FFC91029" HorizontalAlignment="Left" Height="59" Stroke="Black" VerticalAlignment="Top" Width="792" Margin="0,360,0,0"/>
        <Label x:Name="labelEmail" Content="Correo electrónico" HorizontalAlignment="Left" Margin="306,282,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="cuadroEmail" HorizontalAlignment="Left" Height="26" Margin="440,282,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" FontSize="14" IsTabStop="False" MaxLength="50"/>
        <Label x:Name="labelContrasena" Content="Contraseña" HorizontalAlignment="Right" Margin="0,0,362,65" VerticalAlignment="Bottom" FontSize="14" Width="80"/>
        <PasswordBox x:Name="cuadroContrasena" HorizontalAlignment="Left" Margin="440,320,0,0" VerticalAlignment="Top" Width="150" Height="26" FontSize="14" MaxLength="50"/>
        <Button x:Name="botonInicioSesion" Content="Iniciar Sesión" HorizontalAlignment="Left" Margin="640,320,0,0" VerticalAlignment="Top" Width="120" FontSize="14" Height="26" Background="#FFC91029" Foreground="#FFF7F7F7"/>
        <Button x:Name="botonOlvide" Content="¿Olvidó su contraseña?" HorizontalAlignment="Left" Margin="440,377,0,0" VerticalAlignment="Top" Width="150" Height="26" FontSize="14" Click="OlvideButton_Click"/>
        <Button x:Name="botonSalir" Content="Salir" HorizontalAlignment="Left" Height="26" Margin="60,377,0,0" VerticalAlignment="Top" Width="56" FontSize="14" RenderTransformOrigin="2.02,0.564"/>
        <Label x:Name="labelNuevaContrasena" Content="Nueva contraseña" HorizontalAlignment="Left" Margin="309,316,0,0" VerticalAlignment="Top" FontSize="14" Visibility="Hidden"/>
        <PasswordBox x:Name="cuadroNuevaContrasena" HorizontalAlignment="Left" Margin="440,320,0,0" VerticalAlignment="Top" Width="150" Height="26" FontSize="14" IsTabStop="False" Visibility="Hidden" MaxLength="50"/>
        <Button x:Name="botonRestaurarContrasena" Content="Reestablecer contraseña" HorizontalAlignment="Left" Margin="600,377,0,0" VerticalAlignment="Top" Width="160" Height="26" FontSize="14" IsTabStop="False" Click="BotonRestaurarContrasena_Click" Visibility="Hidden"/>
        <Label x:Name="labelRestaurarContrasena" Content="Confirme su contraseña" HorizontalAlignment="Right" Margin="0,0,362,7" VerticalAlignment="Bottom" FontSize="14" Width="156" Foreground="#FFF7F7F7" Visibility="Hidden"/>
        <PasswordBox x:Name="cuadroRestaurarContrasena" HorizontalAlignment="Left" Margin="440,377,0,0" VerticalAlignment="Top" Width="150" Height="26" FontSize="14" MaxLength="50" Visibility="Hidden"/>
        <Label x:Name="labelBienvenido" Content="Para acceder, ingrese sus credenciales." HorizontalAlignment="Left" Margin="3,282,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="botonVolver" Content="Volver" HorizontalAlignment="Left" Height="26" Margin="140,377,0,0" VerticalAlignment="Top" Width="56" FontSize="14" RenderTransformOrigin="2.02,0.564" Click="BotonVolver_Click" Visibility="Hidden"/>
    </Grid>
</Window>
